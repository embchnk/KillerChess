<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="305.0" prefWidth="600.0"
            stylesheets="style/JMetroLightTheme.css" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="com.killerchess.view.loging.LoginController">
    <left>
        <VBox prefHeight="120.0" prefWidth="123.0" spacing="20.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="100.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
            <Label prefHeight="17.0" prefWidth="127.0" styleClass="item-title" text="Login:"/>
            <Label prefHeight="17.0" prefWidth="108.0" styleClass="item-title" text="Password:"/>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="15.0" BorderPane.alignment="CENTER">
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="100.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" right="20.0" top="15.0"/>
            </padding>
            <TextField fx:id="loginField" maxWidth="200.0" styleClass="text-field"/>
            <PasswordField fx:id="passwordField" maxWidth="200.0" styleClass="password-field"/>
        </VBox>
    </center>
    <bottom>
        <ButtonBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
            <buttons>
                <Button fx:id="loginButton" minWidth="200.0" mnemonicParsing="false"
                        onAction="#handleLoginButtonClicked" styleClass="button-default" text="Log in"/>
                <Button fx:id="registerButton" minWidth="200.0" mnemonicParsing="false"
                        onAction="#handleRegisterButtonClicked" styleClass="button-default" text="Register"/>
            </buttons>
            <padding>
                <Insets bottom="20.0" left="20.0" top="20.0"/>
            </padding>
            <BorderPane.margin>
                <Insets right="20.0"/>
            </BorderPane.margin>
        </ButtonBar>
    </bottom>
</BorderPane>
