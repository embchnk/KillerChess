<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="com.killerchess.view.loging.LoginController">
    <left>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Login"/>
                <Label text="Password"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="100.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <VBox prefHeight="200.0" prefWidth="100.0" spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="loginField" maxWidth="200.0"/>
                <PasswordField fx:id="passwordField" maxWidth="200.0"/>
                <ButtonBar prefHeight="40.0" prefWidth="200.0">
                    <buttons>
                        <Button fx:id="loginButton" mnemonicParsing="false" onAction="#handleLoginButtonClicked"
                                text="Log in"/>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButtonClicked"
                                text="Register"/>
                    </buttons>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="200.0" top="20.0"/>
                    </padding>
                </ButtonBar>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="100.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
        </VBox>
    </center>
</BorderPane>
