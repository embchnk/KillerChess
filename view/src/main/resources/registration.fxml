<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/9.0.1"
            fx:controller="com.killerchess.view.registration.RegistrationController">
    <left>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <Label text="Login"/>
                <Label text="Password"/>
                <Label text="Repeat password"/>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="50.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
            </padding>
        </VBox>
    </left>
    <center>
        <VBox spacing="20.0" BorderPane.alignment="CENTER">
            <children>
                <TextField fx:id="loginField" maxWidth="200.0"/>
                <PasswordField fx:id="passwordField" maxWidth="200.0"/>
                <PasswordField fx:id="repeatPasswordField" maxWidth="200.0"/>
                <ButtonBar>
                    <buttons>
                        <Button fx:id="registerButton" mnemonicParsing="false" onAction="#handleRegisterButtonClicked"
                                text="Register"/>
                        <Button fx:id="cancelButton" mnemonicParsing="false" onAction="#handleCancelButtonClicked"
                                text="Cancel"/>
                    </buttons>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="100.0" top="20.0"/>
                    </padding>
                </ButtonBar>
            </children>
            <BorderPane.margin>
                <Insets bottom="20.0" left="20.0" right="20.0" top="50.0"/>
            </BorderPane.margin>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="15.0"/>
            </padding>
        </VBox>
    </center>
    <right>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Label alignment="CENTER" contentDisplay="CENTER" text="Wybierz szablon" textAlignment="CENTER">
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
                    </padding>
                </Label>
                <HBox prefHeight="100.0" prefWidth="200.0">
                    <children>
                        <ImageView fx:id="firstTemplate" fitHeight="50.0" fitWidth="40.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@images/type_1_black_bishop.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </ImageView>
                        <ImageView fx:id="secondTemplate" fitHeight="50.0" fitWidth="40.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@images/type_2_black_bishop.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </ImageView>
                        <ImageView fx:id="thirdTemplate" fitHeight="50.0" fitWidth="40.0" pickOnBounds="true"
                                   preserveRatio="true">
                            <image>
                                <Image url="@images/type_3_black_bishop.png"/>
                            </image>
                            <HBox.margin>
                                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
                            </HBox.margin>
                        </ImageView>
                    </children>
                </HBox>
            </children>
        </VBox>
    </right>
</BorderPane>
