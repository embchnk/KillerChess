<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<AnchorPane xmlns:fx="http://javafx.com/fxml/1" prefHeight="305.0" prefWidth="600.0"
            stylesheets="style/JMetroLightTheme.css" xmlns="http://javafx.com/javafx/8.0.121"
            fx:controller="com.killerchess.view.roomcreator.RoomCreatorController">
    <TextField fx:id="roomNameTextField" layoutX="65.0" layoutY="74.0" styleClass="text-field"/>
    <VBox fx:id="gameSchemasRadioButtonsVBox" layoutX="65.0" layoutY="158.0" prefHeight="200.0" prefWidth="383.0"
          styleClass="radio-menu-item"/>
    <ButtonBar layoutX="103.0" layoutY="344.0" prefHeight="65.0" prefWidth="483.0">
        <buttons>
            <Button fx:id="createRoomButton" minWidth="200.0" mnemonicParsing="false"
                    onMouseClicked="#handleCreateRoomButtonClick" styleClass="button-default" text="Create room"/>
            <Button fx:id="cancelButton" minWidth="200.0" mnemonicParsing="false"
                    onMouseClicked="#handleCancelButtonClick" styleClass="button-default" text="Cancel"/>
        </buttons>
        <padding>
            <Insets bottom="20.0" left="20.0" top="20.0"/>
        </padding>
    </ButtonBar>
</AnchorPane>
